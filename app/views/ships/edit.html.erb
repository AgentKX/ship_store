<h1>Edit Ships Content</h1>
<%= form_tag "/ships/#{@ship.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @ship.name %> 
  </div>
  <div>
    <%= label_tag :price %> 
    <%= text_field_tag :price, @ship.price %> 
  </div> 
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @ship.description %> 
  </div>
  
  <div>
    <%= submit_tag "Edit Content" %>
  </div>
<% end %>