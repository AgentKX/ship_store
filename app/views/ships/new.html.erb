<h1>Add a new ship</h1>
<%= form_tag '/ships', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %> 
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  
  <div>
    <%= submit_tag "Add Ship" %>
  </div>
<% end %>